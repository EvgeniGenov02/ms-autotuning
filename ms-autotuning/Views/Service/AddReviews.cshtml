@model ReviewFormModel

@{
    ViewData["Title"] = "Добавяне на мнение";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="AddReviews" method="post">

            <div class="mb-3">
                <label asp-for="@Model.ServiceId" class="form-label-add-edit">Select Service</label>
                <select asp-for="@Model.ServiceId" class="form-control" aria-required="true">
                    <option disabled selected value="">Select Service...</option>
                    @foreach (var service in Model.Services)
                    {
                        <option value="@service.Id">@service.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.ServiceId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Feedback" class="form-label-add-edit">More Info</label>
                <textarea asp-for="@Model.Feedback" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="@Model.Feedback" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Rating" class="form-label-add-edit">Rating</label>
                <input asp-for="@Model.Rating" class="form-control" placeholder="Оценете от 1 (най-лошо) до 5 (най-добро)" />
                <span asp-validation-for="@Model.Rating" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input class="btn mb-2 w-100 p-3 fw-bold" type="submit" value="Add Review" />
            </div>
        </form>
    </div>
</div>